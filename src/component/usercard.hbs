<div>
    {{#with data}}
        <div>ID: {{id}}</div>
        <div>Name: {{name}}</div>
        <div>
            {{#if isAdmin}}
                {{> button text="send report"}}
            {{else}}
                {{> button text=" do NOT send report"}}
            {{/if}}
        </div>
        
        {{#unless isConfirm}}
            <div>{{> button text="Вам потрібно пройти верифікацію"}}</div>
        {{/unless}}
        
        {{#if balance includeZero=true}}
            <div><strong>Ваш баланс: {{balance}}</strong></div>
        {{/if}}
    {{/with}}
</div>